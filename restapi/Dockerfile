FROM node:16.13.1
LABEL org.opencontainers.image.source https://github.com/arquisoft/dede_en1a
COPY . /app
WORKDIR /app
#Install the dependencies
RUN npm install

ENV RESTAPI_DB_NAME=$RESTAPI_DB_NAME
ARG DB_NAME="DeDe_Database"
ENV RESTAPI_DB_NAME=$DB_NAME

ENV RESTAPI_DB_USERNAME=$RESTAPI_DB_USERNAME
ARG DB_USERNAME="admin"
ENV RESTAPI_DB_USERNAME=$DB_USERNAME

ENV RESTAPI_DB_PASSWORD=$RESTAPI_DB_PASSWORD
ARG DB_PASSWORD="admin"
ENV RESTAPI_DB_PASSWORD=$DB_PASSWORD

ENV RESTAPI_PORT=$RESTAPI_PORT
ARG PORT="5000"
ENV RESTAPI_PORT=$PORT

ARG SALT_ROUNDS="10"
ENV RESTAPI_SALT_ROUNDS=$SALT_ROUNDS

ARG JWT_SECRET='zxT?k4m#U3fEGJt8,"GfnE$`Y,,+xbR{'
ENV RESTAPI_JWT_SECRET=$JWT_SECRET

CMD [ "npm", "start" ]